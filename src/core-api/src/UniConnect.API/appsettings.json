    "FromEmail": "noreply@uniconnect.com",
    "FromName": "UniConnect"
  },
  "Elasticsearch": {
    "Url": "http://elasticsearch:9200",
    "DefaultUrl": "http://elasticsearch:9200",
    "IndexPrefix": "uniconnect-"
