  "MinioSettings": {
    "Endpoint": "minio:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "Region": "",
    "UseSSL": false,
    "PublicBuckets": ["public"]
  },
  "Redis": {
    "Configuration": "redis:6379"
  },
  "EmailSettings": {
    "SmtpServer": "mailhog",
    "SmtpPort": 1025,
    "SmtpUsername": "",
    "SmtpPassword": "",
