{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Database=uniconnect;Username=uniconnect;Password=uniconnect_password"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "JwtSettings": {
    "SecretKey": "super_secret_key_for_development_only_change_in_production",
    "Issuer": "UniConnect",
    "Audience": "UniConnect",
    "ExpiryMinutes": 60
