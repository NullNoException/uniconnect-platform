{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Database=uniconnect;Username=uniconnect;Password=uniconnect_password"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "KeycloakSettings": {
    "Authority": "http://keycloak:8080",
    "Realm": "uniconnect",
    "ClientId": "uniconnect-api",
    "ClientSecret": "uniconnect-api-secret-change-in-production",
    "RequireHttpsMetadata": false,
    "AccessTokenExpirationMinutes": 15,
    "AdminUsername": "admin",
    "AdminPassword": "admin"
  },
  "MinioSettings": {
    "Endpoint": "minio:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "Region": "",
    "UseSSL": false,
    "PublicBuckets": ["public"]
  },
  "Redis": {
    "Configuration": "redis:6379"
  },
  "EmailSettings": {
    "SmtpServer": "mailhog",
    "SmtpPort": 1025,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "EnableSsl": false,
    "FromEmail": "noreply@uniconnect.com",
    "FromName": "UniConnect"
  },
  "MeilisearchSettings": {
    "Url": "http://meilisearch:7700",
    "MasterKey": "",
    "IndexPrefix": "uniconnect-",
    "Environment": "production",
    "MaxIndexSize": "100GB",
    "MaxTaskDbSize": "10GB",
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "CacheTtlSeconds": 300,
    "EnableTypoTolerance": true,
    "TypoTolerance": {
      "MinWordSizeForTypos": {
        "OneTypo": 5,
        "TwoTypos": 9
      },
      "DisableOnWords": [],
      "DisableOnAttributes": []
    },
    "RankingRules": [
      "words",
      "typo",
      "proximity",
      "attribute",
      "sort",
      "exactness",
      "business_score:desc"
    ],
    "SearchableAttributes": [
      "name",
      "description",
      "requirements",
      "location",
      "business_fields"
    ],
    "FilterableAttributes": [
      "category",
      "location",
      "business_fields",
      "status",
      "created_at",
      "updated_at"
    ],
    "SortableAttributes": [
      "created_at",
      "updated_at",
      "business_score",
      "name"
    ],
    "Languages": [
      "en",
      "fr",
      "es",
      "de",
      "it",
      "ar"
    ]
  },
  "JaegerSettings": {
    "Host": "jaeger",
    "Port": 6831,
    "ServiceName": "UniConnect.API"
  },
  "Seq": {
    "ServerUrl": "http://seq:5341"
  },
  "Keycloak": {
    "BaseUrl": "http://keycloak:8080",
    "Realm": "uniconnect",
    "AuthServerUrl": "http://keycloak:8080",
    "Resource": "uniconnect-api",
    "VerifyTokenAudience": false,
    "Credentials": {
      "Secret": "uniconnect-api-secret-change-in-production"
    },
    "SslRequired": "external",
    "TokenClockSkew": 30,
    "AdminApi": {
      "Username": "admin",
      "Password": "admin",
      "ClientId": "admin-cli"
    }
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [
          "uniconnect-api",
          "account"
        ],
        "ValidIssuers": [
          "http://keycloak:8080/realms/uniconnect",
          "http://localhost:8180/realms/uniconnect"
        ]
      }
    }
  },
  "AllowedHosts": "*"
}
