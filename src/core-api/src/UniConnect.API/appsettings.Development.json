{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=uniconnect;Username=uniconnect;Password=uniconnect_password"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "MinioSettings": {
    "Endpoint": "localhost:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "Region": "",
    "UseSSL": false,
    "PublicBuckets": ["public"]
  },
  "Redis": {
    "Configuration": "localhost:6379"
  },
  "MeilisearchSettings": {
    "Url": "http://localhost:7700",
    "MasterKey": "masterKey",
    "IndexPrefix": "uniconnect-dev-",
    "Environment": "development",
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "CacheTtlSeconds": 60,
    "EnableTypoTolerance": true,
    "Languages": [
      "en",
      "fr"
    ]
  },
  "JaegerSettings": {
    "Host": "localhost",
    "Port": 6831,
    "ServiceName": "UniConnect.API.Development"
  },
  "Seq": {
    "ServerUrl": "http://localhost:5341"
  },
  "EmailSettings": {
    "SmtpServer": "localhost",
    "SmtpPort": 1025,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "EnableSsl": false,
    "FromEmail": "noreply@uniconnect.com",
    "FromName": "UniConnect"
  },
  "KeycloakSettings": {
    "Authority": "http://localhost:8180",
    "Realm": "uniconnect",
    "ClientId": "uniconnect-api",
    "ClientSecret": "uniconnect-api-secret-change-in-production",
    "RequireHttpsMetadata": false,
    "AccessTokenExpirationMinutes": 15,
    "AdminUsername": "admin",
    "AdminPassword": "admin"
  },
  "Keycloak": {
    "BaseUrl": "http://localhost:8180",
    "Realm": "uniconnect",
    "AuthServerUrl": "http://localhost:8180",
    "Resource": "uniconnect-api",
    "VerifyTokenAudience": false,
    "Credentials": {
      "Secret": "uniconnect-api-secret-change-in-production"
    },
    "SslRequired": "external",
    "TokenClockSkew": 30,
    "AdminApi": {
      "Username": "admin",
      "Password": "admin",
      "ClientId": "admin-cli"
    }
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [
          "uniconnect-api",
          "account"
        ],
        "ValidIssuers": [
          "http://localhost:8180/realms/uniconnect"
        ]
      }
    }
  },
  "AllowedHosts": "*"
}
